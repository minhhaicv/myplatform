{% if data.pager|length > 0 %}
<nav>
    <ul class="pagination" style='margin: 0;'>
        {% for item in data.pager  %}
            <li {% if item.target %}class='active'{% endif %}>
                <a href="{{ get('url', 'helper').get({'page': 'page:'~item.page }) }}">{{ item.display }}</a>
            </li>
        {% endfor %}
    </ul>
</nav>
{% endif %}